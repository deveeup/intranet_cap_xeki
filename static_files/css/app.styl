								h3
									_reset(0)
									_fz(1em)
									_c(white)
									padding-left 10px
									background-color transparent
									-moz-user-select: none; 
									-webkit-user-select: none;
									-ms-user-select: none;
									user-select: none; 
								.even 
									_c($blue)
							&-email 
								_w(270px)
								_reset(0)
								span 
									_reset(0)
									_c(white)
									-moz-user-select: none; 
									-webkit-user-select: none;
									-ms-user-select: none;
									user-select: none; 
								.even 
