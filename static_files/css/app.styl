				_dfc(center, center)
				margin-bottom 30px
				input[type="text"], textarea
					_w(90%)
					_br(5px)
					border none
					padding 3px 10px
					margin-bottom 10px
					border 1px solid $white
					outline none
				label 
					_w(90%)
					_ta(left)
					_c($blue)
					margin-top 5px
				&-file
					width: 0.1px;
					height: 0.1px;
					opacity: 0;
					overflow: hidden;
					position: absolute;
					z-index: -1;
				&-submit 
					border none
					_bc($orange)
					_ta(center)
					_c(white)
					_br(5px)
					outline none
					padding 3px 10px 
					transition .3s
					&:hover 
						_bc($orange2)
					&:active 
						transform scale(.9)
				&-buttons
					_fullW()
					_dfr(center, center)
					&-label 
						_bc($blue2)
						_br(5px)
						text-align center !important
						width 60% !important
						color white !important
						cursor pointer
						padding 2px 10px
						transition .3s 
						margin 0
						-moz-user-select: none; 
						-webkit-user-select: none;
						-ms-user-select: none;
						user-select: none; 
						&:hover 
							_bc($blue)
						&:active 
							transform scale(.9)
					&-submit 
						_bc($orange)
						_br(50%)
						_c(white)
						_fwb()
						outline none
						border none
						margin 3px 0 0 10px
						transition .3s
						&:hover
							_bc($orange2)
						&:active 
							transform scale(.9)
							_bc($orange2)
					
