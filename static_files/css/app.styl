@import '_init.styl'

.body-login 
	_fullW()
	_maxw(none)
	_h(100vh)
	_reset(0)
	_dfc(center, center)
	_ff('Roboto')
	background-image: url('static_files/img/login_background.jpg')
	background-repeat: no-repeat
	background-size: cover
	&-auxiliartext
		_c(white)
	&-webs-container
		margin-bottom 50px
		_dfr(center, center)
		figure 
			will-change transform
			img 
				transition .3s
				opacity .6
				&:hover 
					opacity 1
				&:active
					transform scale(.9)
			&:last-child
				border-left 2px solid $orange
				padding 20px 0  20px 50px

	&-form 
		_dfc(center, center)
		_minw(400px)
		label 
			_c(white)
		input 
			padding 10px 
			_br(5px)
			border none 
			margin 10px auto
			_w(80%)
			_ta(center)
			outline none
		input[type=number]::-webkit-inner-spin-button,
		input[type=number]::-webkit-outer-spin-button
			-webkit-appearance: none;
		button 
			_bc($orange)
			_br(5px)
			padding 5px 10px  
			_c(white)
			border none 
			_fz(18px)
			will-change transform
			transition .3s
			outline none
			&:active 
				transform scale(.9)
	&-error-container 
		padding 0
		margin 0 0 30px 0 
		_bc(rgba(red, .5))
		_w(340px)
		_br(5px)
		p 
			padding  0 10px
			_ta(center)
			_c(white)
	&-successful-container 
		padding 0
		margin 0 0 30px 0 
		_bc(rgba(green, .5))
		_w(340px)
		_br(5px)
		p 
			padding  0
			_ta(center)
			_c(white)
	&-forgotpw 
		_aReset(white)
		_mTop(20px)
		transition .3s
		will-change: transform
		&:hover 
			border-bottom 1px solid white
		&:active 
			transform scale(.9)
body 
	_maxw(1024px)
	_ma()
	header 
		_pr()
		_dfr(space-between, center)
		padding 10px
		box-shadow: 0 3px 5px #EAEAEA
		.user 
			_dfr(center, center)
			_reset(0)
			&-figure 
				_reset(0)
				img 
					_reset(0)
			&-container 
				_reset(0)
				_mLeft(15px)
				h4 
					_c($blue)
					_fz(1.1em)
					margin 5px auto
				span 
					_bc($orange)
					_br(25px)
					_fz(.9em)
					_c(white)
					padding 2px 10px
					margin 10px auto
		.business 
			_dfr(center, center)
			_w(55%)
			_reset(0)
			&-separator 
				border-left 1px solid $orange
				_h(70px)
				margin 0 20px
			&-figure-coor, &-figure-cap
				a
					img
						will-change transform
						transition .3s
						&:active 
							transform scale(.9)
		.menu 
			_dfr(center, center)
			figure
				margin 0 15px
				_dfr(center, center)
				transition .3s 
				_w(24px)
				img 
					_fullW()
				&:active 
					transform scale(.7)
		.header-menu 
			_bc($electricBlue)
			_h(530px)
			_pa()
			_t(100px)
			_l(0)
			_r(0)
			_z(3)
			_dn()
			&-close 
				_pa()
				_r(25px)
				_t(15px)
				transition .3s
				&:active 
					transform scale(.7)
				img 
					_reset(0)
					_w(20px)
			&-container 
				_w(70%)
				_ma()
				_dfr(center, flex-start)
				_fw(wrap)
				padding 15px
				&-item 
					_bc($blue2)
					_br(5px)
					_dfc(flex-start, center)
					_maxw(170px)
					_h(230px)
					margin 10px
					padding 20px 5px 5px 5px
					transition .3s
					&-form 
						cursor pointer !important
						&-buttonText
							_w(90%)
							font-size .9em !important
							letter-spacing: -1px
							margin 10px 5% !important
							cursor pointer !important
						&-figure 
							&-buttonImage 
								width 100% !important
								background-color transparent !important
								margin 0 !important
								padding 0
								cursor pointer !important
								img 
									_reset(0)
									_fullW()
					&:hover 
						_bc($orange)
					&:active 
						transform scale(.9)
					figure 
						_w(90%)
						_ma()
						img 
							_fullW()
					button 
						_bc(white)
						_br(5px)
						_w(90%)
						_dfr(center, center)
						border none
						margin 10px 0
						outline none
						a 
							_aReset($blue2)
							_fz(.9em)
							letter-spacing: -1px
	footer 
		_bc($blue)
		_dfr(center, center)
		.footer-separator 
			border-left 1px solid white
			_h(60px)
		.footer-item 
			_dfr(center, center)
			_w(50%)
			padding 30px 0
			&-cap 
				margin-right 35px
// home
	.home 
		_pr()
		.option-bar 
			_dfr(center, center)
			_fullW()
			_reset(0)
			margin-top 20px
			&-item
				_w(200px)
				_dfc(center, center)
				_fw(wrap)
				padding 0 
				margin 10px
				&-figure-container
					_w(200px)
					_pr()
					cursor pointer
					box-shadow rgba($blue, .5) 3px 5px 5px;
					margin 10px
					transition .3s
					will-change transform
					_reset(0)
					&:active 
						transform scale(.8)
					&-imgbackground 
						_fullW()
						_reset(0)
						img 
							_fullW()
							_reset(0)
					&-icon 
						_dfr(center, center)
						_pa()
						_t(0)
						_r(0)
						_b(0)
						_l(0)
						_reset(0)
						_fullW()
						_bc(rgba($blue, .8))
						transition .3s
						img 
							_reset(0)
							_w(50%)
							_t(25%)
							_r(25%)
							_b(25%)
							_l(25%)
							_bc(transparent)
							_pa()
							&:hover 
								_bc(transparent)
						&:hover 
							_bc($orange)
							_bc(rgba($orange, .8))
				&-title 
					_ta(center)
					_fullW()
					_ff('Roboto')
					_aReset($blue)
					_mTop(5px)
					transition .3s
					will-change transform
					&:active 
						transform scale(.9)
					&:hover 
						_aReset($orange)
		.events-container
			_fullW()
			_bc(#EAEAEA)
			padding 15px 
			.eventSliders
				_w(80%)
				_ma()
				&-item 
					_fullW()
					_dfr(center, flex-start)
					&-figure 
						_w(350px)
						_h(160px)
						_reset(0)
						border-right 2px solid $orange
						img
							_fullW()
							_h(160px)
					&-container 
						_bc(rgba($blue, .7))
						_fullW()
						_h(160px)
						padding 10px 20px 
						_dfc(center, center)
						h3, p 
							_c(white)
							_ta(left)
							_fullW()
						p 
							_lh(1.3)
						&-viewmore
							_bc($orange)
							_aReset(white)
							_ma()
							_reset(0)
							_br(25px)
							padding 0 15px
							will-change transform
							transition .3s
							&:active 
								transform scale(.9)
			.owl-dots
				_fullW()
				_h(40px)
				_reset(0)
				_dfr(center, center)
				.owl-dot 
					_br(50%)
					_w(10px)
					_bc($blue)
					_dfr(center, center)
					margin 3px
					span 
						padding 5px
				.active 
						_bc($orange)
//profile 
	.profile 
		&-header 
			_fullW()
			_bc($blue2)
			_mTop(2px)
			_h(210px)
			_dfr(center, center)
			padding 30px 10px 
