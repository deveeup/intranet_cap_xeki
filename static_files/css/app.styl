								.even 
									_c($blue)
							&-viewMore
								_dfr(center, center)
								_reset(0)
								_w(40px)
								figure 
									_reset(0)
									_w(20px)
									img 
										_fullW()
						&-moreInfo
							_dn()
							_fullW()
							_bc(white)
							margin 0 
							padding 15px
							&-div
								_dfr(flex-start, flex-start)
								_fw(wrap)
								_fullW()
								&-imageContainer 
